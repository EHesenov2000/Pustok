
@using PustokHomework.Models
@model Service
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
            
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.Title">Title</label>
            <input type="text" asp-for="@Model.Title" class="form-control" id="title" placeholder="Title">
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.SubTitle">SubTitle</label>
            <textarea asp-for="@Model.SubTitle" class="form-control" id="subtitle" rows="3" placeholder="SubTitle"></textarea>
            <span asp-validation-for="@Model.SubTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Order">Order</label>
            <input type="number" asp-for="@Model.Order" class="form-control" id="order" rows="3"/>
            <span asp-validation-for="@Model.Order" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>

