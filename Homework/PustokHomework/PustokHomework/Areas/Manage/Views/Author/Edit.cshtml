@using PustokHomework.Models
@model Author
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.FullName">Full name</label>
            <input type="text" asp-for="@Model.FullName" class="form-control" id="FullName" placeholder="Full name">
            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Desc">Desc</label>
            <textarea asp-for="@Model.Desc" class="form-control" id="Desc" rows="3"></textarea>
            <span asp-validation-for="@Model.Desc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.PhotoFile">Photo</label>
            <input asp-for="@Model.PhotoFile" class="form-control col-md-2" rows="3"></input>
            <span asp-validation-for="@Model.PhotoFile" class="text-danger"></span>
        </div>
        @if (Model.Photo!=null)
        {
            <div class="img-box" style="position:relative;max-width:200px;background-color:black;width:200px;height:200px;max-height:200px;">
                <img class="d-block" src="~/uploads/@Model.Photo" style="max-width:180px;width:180px;height:180px;max-height:180px;margin-left:10px;padding-top:20px" />
                <i class="fas fa-times remove-img-box" style="color:red;position:absolute;cursor:pointer;right:4px;top:2px;font-size:17px"></i>
                <input type="hidden" name="Photo" value="@Model.Photo" />
            </div>
        }

        <button type="submit" class="btn btn-primary m-3">Submit</button>
    </form>

</div>

@section Scripts{

    <script>
        $(document).ready(function () {

            $(document).on("click", ".remove-img-box", function (e) {
                $(this).parents(".img-box").empty();
                $(".img-box").attr("style", "background-color:unset");
            })
        })
    </script>

}