@using PustokHomework.Models
@model AppUser
@{
    ViewData["Title"] = "Edit";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="site-wrapper" id="top">

    <!--=============================================
    =            Login Register page content         =
    =============================================-->
    <main class="page-section inner-page-sec-padding-bottom">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
                    <!-- Login Form s-->
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Profile edit</h4>
                            <div class="row">
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="@Model.FullName">Full Name</label>
                                    <input asp-for="@Model.FullName" class="mb-0 form-control" type="text"
                                           placeholder="Enter your full name">
                                    <span class="text-danger" asp-validation-for="@Model.FullName"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="@Model.UserName">UserName</label>
                                    <input asp-for="@Model.UserName" class="mb-0 form-control" type="text"
                                           placeholder="Enter your full name">
                                    <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="@Model.ContactPhone">Phone</label>
                                    <input asp-for="@Model.ContactPhone" class="mb-0 form-control" type="text"
                                           placeholder="Enter your phone">
                                    <span class="text-danger" asp-validation-for="@Model.ContactPhone"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="@Model.Address">Address</label>
                                    <textarea asp-for="@Model.Address" rows="2" class="mb-0 form-control" type="text"
                                              placeholder="Enter your full name"></textarea>
                                    <span class="text-danger" asp-validation-for="@Model.Address"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="@Model.Password">Password</label>
                                    <input asp-for="@Model.Password" class="mb-0 form-control"
                                           placeholder="">
                                    <span class="text-danger" asp-validation-for="@Model.Password"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="@Model.ConfirmedPassword">ConfirmedPassword</label>
                                    <input asp-for="@Model.ConfirmedPassword" class="mb-0 form-control"
                                           placeholder="">
                                    <span class="text-danger" asp-validation-for="@Model.ConfirmedPassword"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="@Model.CurrentPassword">CurrentPassword</label>
                                    <input asp-for="@Model.CurrentPassword" class="mb-0 form-control"
                                           placeholder="">
                                    <span class="text-danger" asp-validation-for="@Model.CurrentPassword"></span>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-outlined">Update</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
