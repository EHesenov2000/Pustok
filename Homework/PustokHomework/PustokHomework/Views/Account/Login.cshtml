@using PustokHomework.ViewModels
@model MemberLoginModel
@{
    ViewData["Title"] = "Login";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="site-wrapper" id="top">

    <!--=============================================
    =            Login Register page content         =
    =============================================-->
    <main class="page-section inner-page-sec-padding-bottom">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Enter account</h4>
                            <div class="row">
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="@Model.UserName">UserName</label>
                                    <input asp-for="@Model.UserName" class="mb-0 form-control" type="text"
                                           placeholder="">
                                    <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="@Model.Password">Password</label>
                                    <input asp-for="@Model.Password" class="mb-0 form-control">
                                    <span class="text-danger" asp-validation-for="@Model.Password"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="@Model.IsPersistent">Yadda saxla</label>
                                    <input asp-for="@Model.IsPersistent" class="mb-0 form-control">
                                    <span class="text-danger" asp-validation-for="@Model.IsPersistent"></span>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-outlined">Login</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>

